<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppDocBao" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue_green</item>
        <item name="colorPrimaryVariant">@color/blue_green</item>
        <item name="android:textColorPrimary">@color/black</item>

    </style>

    <style name="Theme.AppDocBao" parent="Base.Theme.AppDocBao" />
    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">#ececec</item>
    </style>
    <style name="Theme.DrawerCheck.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DrawerCheck.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Light mode -->
    <!-- Screen background if light mode on -->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <style name="BACKGROUND_USER">
        <item name="android:background">#ececec</item>
    </style>
    <style name="BACKGROUND_BUTTON_USER">
        <item name="android:background">#FFF</item>
    </style>

    <!-- Text background if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TEXT_TITLE_ARTICLE">
        <item name="android:textColor">@color/blue_grey</item>
    </style>

    <style name="TOOLBAR" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#41B1C2</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="NAV_VIEW" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RECYCLEVIEW" >
        <item name="android:background">#FFF</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>