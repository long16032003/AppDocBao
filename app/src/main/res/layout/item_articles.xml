<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:background="@drawable/border_rectangle_blue"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgArticle"
            android:layout_width="116dp"
            android:layout_height="117dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/logo_news" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleArticle"
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:layout_marginBottom="10dp"
                android:text="Tây Ninh: Bắt đối tượng lừa đảo chiếm đoạt tài sản qua không gian mạng"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/authorArticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Author" />

                <TextView
                    android:id="@+id/dateArticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20/10/2003" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
