<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/user_profile_icon"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/blue_green"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Username"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnActivityPostArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_blue"
            style="@android:style/Widget.Button"
            android:text="Tạo bài viết" />

        <TextView
            android:drawableLeft="@drawable/management_icon"
            android:id="@+id/manageArticle"
            android:background="@drawable/border_rectangle_orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Quản lý bài đăng"
            android:textSize="24dp" />

        <TextView
            android:drawableLeft="@drawable/sale_icon"
            android:id="@+id/userVoucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:background="@drawable/border_rectangle_yellow"
            android:textColor="@color/black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:text="Voucher của bạn"
            android:textSize="24dp" />

        <TextView
            android:drawableLeft="@drawable/clock_icon"
            android:id="@+id/tinganday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:background="@drawable/border_rectangle_red"
            android:textColor="@color/black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:text="Tin gần đây"
            android:textSize="24dp" />

        <TextView
            android:textColor="@color/black"
            android:drawableLeft="@drawable/blue_green_saved_bookmark"
            android:id="@+id/tindaluu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:background="@drawable/border_rectangle_blue"
            android:text="Tin đã lưu"
            android:textSize="24dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogOut"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:background="@drawable/button_blue"
            style="@android:style/Widget.Button"
            android:text="Đăng xuất" />
    </LinearLayout>

</FrameLayout>